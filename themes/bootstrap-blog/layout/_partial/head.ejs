<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <%
        var title = page.title;

        if (is_archive()) {
            title = 'ARCHIVES';

            if (is_month()) {
                title += ': ' + page.year + '/' + page.month;
            } else if (is_year()) {
                title += ': ' + page.year;
            }
        } else if (is_category()) {
            title = 'CATEGORY: ' + page.category;
        } else if (is_tag()) {
            title = 'TAG: ' + page.tag;
        }
        %>
        <title>
            <% if (title){ %>
            <%= title %> |
            <% } %>
            <%= config.title %></title>
        <meta name="viewport"
              content="width=device-width, initial-scale=1, maximum-scale=1">
        <%- open_graph({
            twitter_id: theme.twitter_id,
            google_plus: theme.google_plus,
            fb_admins: theme.fb_admins,
            fb_app_id: theme.fb_app_id
        }) %>
        <% if (theme.rss){ %>
        <link rel="alternate"
              href="<%- url_for(theme.rss) %>"
              title="<%= config.title %>"
              type="application/atom+xml">
        <% } %>
        <% if (theme.favicon){ %>
        <link rel="icon"
              href="<%- url_for(theme.favicon) %>">
        <% } %>

        <%- css('css/bootstrap.min') %>
        <%- css('css/font-awesome/css/font-awesome.min') %>
        <%- css('css/styles') %>
        <%- partial('google-analytics') %>
    </head>
