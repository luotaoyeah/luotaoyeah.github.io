<head>
    <%
    var title = page.title;
    if (is_home()) {
        title = config.title
    }
    %>
    <title>
        <% if (title){ %>
        <%= title.toUpperCase() %>
        <% } %>
    </title>
    <meta name="keywords"
          content="<%- theme.keywords %>"/>

    <meta http-equiv="content-type"
          content="text/html; charset=utf-8"/>
    <meta name="viewport"
          content="width=device-width, initial-scale=1, maximum-scale=1">

    <%- css('css/bootstrap.min.css') %>
    <%- css('css/bootstrap-theme.min.css') %>

    <% if(is_home()) { %>
    <link href="<%- url_for(theme.css) %>/home.css?v=<%- theme.version %>"
          rel="stylesheet"
          type="text/css"/>
    <% } else { %>
    <link href="<%- url_for(theme.css) %>/main.css?v=<%- theme.version %>"
          rel="stylesheet"
          type="text/css"/>

    <%- js('js/util.js') %>
    <script>
      if (isMobile()) {
        loadjscssfile('/css/mobile.css', 'css');
      } else {
        loadjscssfile('/css/desktop.css', 'css');
      }
    </script>
    <% } %>

    <link rel="alternate"
          type="application/atom+xml"
          href="/atom.xml"
          title="Atom feed">

    <% if(theme.favicon){ %>
    <link rel="shortcut icon"
          type="image/x-icon"
          href="<%- url_for(theme.favicon) %>?v=<%- theme.version %>"/>
    <% } %>
    <link href="<%- url_for(theme.css) %>/custom.css"
          rel="stylesheet"
          type="text/css"/>

</head>
